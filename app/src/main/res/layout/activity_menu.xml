<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg1"
    tools:context=".Menu.Menu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".Menu.Menu">

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="161dp"
            android:layout_marginLeft="161dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:text="Sign Out"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a6" />

        <Button
            android:background="@drawable/edit_round"
            android:id="@+id/a5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="44dp"
            android:text="Iteration"
            app:layout_constraintEnd_toStartOf="@+id/a6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a3" />

        <Button
            android:background="@drawable/edit_round"
            android:id="@+id/a6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="44dp"
            android:text="Strings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a5"
            app:layout_constraintTop_toBottomOf="@+id/a4" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#ffffff"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <Button
            android:id="@+id/wip"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="49dp"
            android:text="What is programming?"
            android:background="@drawable/edit_round"
            app:layout_constraintBottom_toTopOf="@+id/a3"
            app:layout_constraintEnd_toStartOf="@+id/a2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:background="@drawable/edit_round"
            android:id="@+id/a2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="49dp"
            android:text="Variables"
            app:layout_constraintBottom_toTopOf="@+id/a4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/wip"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:background="@drawable/edit_round"
            android:id="@+id/a3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="44dp"
            android:text="Operators"
            app:layout_constraintBottom_toTopOf="@+id/a5"
            app:layout_constraintEnd_toStartOf="@+id/a4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wip" />

        <Button
            android:background="@drawable/edit_round"
            android:id="@+id/a4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:text="Selection Statements"
            app:layout_constraintBottom_toTopOf="@+id/a6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/a3"
            app:layout_constraintTop_toBottomOf="@+id/a2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>